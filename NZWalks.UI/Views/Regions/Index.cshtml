@model IEnumerable<NZWalks.UI.Models.DTO.RegionDto>

<h1 class="mt-3">Regions</h1>

@* After Delete Region the message will show here *@
@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<div class="d-flex justify-content-end">
    <a class="btn btn-sm btn-secondary mb-2" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Serial</th>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
        }
        @foreach (var region in Model)
        {
            i++;
            <tr class="text-center">
                <td>@i</td>
                <td class ="text-start">@region.Id</td>
                <td>@region.Code</td>
                <td>@region.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id" class="btn btn-sm btn-primary">Edit</a>

                    <a asp-controller="Regions" asp-action="Delete" asp-route-id="@region.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>